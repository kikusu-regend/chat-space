.main_chat__contents__tweets
  .main_chat__contents__tweets__name
    = message.user.name
  .main_chat__contents__tweets__date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
.main_chat__contents__massage
  - if message.content.present?
    = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

    


